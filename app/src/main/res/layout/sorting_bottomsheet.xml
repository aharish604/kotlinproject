<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:padding="20dp"
              android:background="@color/colorProfileGrey"
              android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tv_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"/>

    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:id="@+id/rl_low_to_high"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_low_to_high"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Price: Low to High"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>

            <RadioButton
                    android:id="@+id/rb_low_to_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
            />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_high_to_low"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_high_to_low"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Price: High to Low"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
            />

            <RadioButton
                    android:id="@+id/rb_high_to_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
            />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_negotiable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_negotiable"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Negotiable"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
            />

            <RadioButton
                    android:id="@+id/rb_negotiable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
            />

        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_exchange"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Exchange"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
            />

            <RadioButton
                    android:id="@+id/rb_exchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
            />

        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/rl_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Distance"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"
            />

            <RadioButton
                    android:id="@+id/rb_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
            />

        </RelativeLayout>

        <TextView
                android:id="@+id/tv_seek_bar_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 miles"
                android:visibility="gone"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center"
        />

        <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"
                android:progressDrawable="@drawable/seekbar_progressbar"
                android:progress="0"
                android:thumbTintMode="multiply"
                android:max="30" />

        <Button
                android:id="@+id/btn_done"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Done"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/sellerbutton"
                android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>