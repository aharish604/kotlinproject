<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_category_item"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

    <ImageView
            android:id="@+id/imv_sub_category_item"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/logo_text" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/euro" />

            <TextView
                    android:id="@+id/tv_sub_category_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="555.00"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />
        </LinearLayout>

        <TextView
                android:id="@+id/tv_sub_category_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brown Leather Jacket"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>