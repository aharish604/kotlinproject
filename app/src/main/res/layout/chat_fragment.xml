<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="10dp">

    <TextView
            android:id="@+id/tv_chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Chat"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold" />


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_chat_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_chat_title"
            android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>


    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_search_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_chat_title"
            android:scrollbars="vertical"
            android:visibility="gone"></androidx.recyclerview.widget.RecyclerView>


    <ImageView
            android:id="@+id/imv_chat_fab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:src="@drawable/chat_fab"
            android:visibility="gone" />


    <TextView
            android:id="@+id/tv_chat_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="No Chat Contacts Available"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

</RelativeLayout>