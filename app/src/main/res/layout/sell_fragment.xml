<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">

                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextInputLayoutStyle"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_seller_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Seller Name"
                            android:textColor="@color/colorGrey"

                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_il_unii_mail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"

                        app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ti_unii_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Uni Email"

                            android:inputType="textEmailAddress"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">


                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_il_date"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ti_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/calendar"
                            android:hint="Date"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp"
                            android:windowSoftInputMode="stateHidden" />

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_il_location"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ti_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableRight="@drawable/location"
                            android:hint="Location"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp"
                            android:windowSoftInputMode="stateHidden" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_il_product_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/TextInputLayoutStyle"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ti_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Product Name / Services"
                            android:inputType="textCapSentences"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">

                <RelativeLayout
                        android:id="@+id/rl_category"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                    <TextView
                            android:id="@+id/tv_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="Select Category"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />

                    <ImageView
                            android:id="@+id/imv_category"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/dropdown" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">

                <RelativeLayout
                        android:id="@+id/rl_sub_category"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                    <TextView
                            android:id="@+id/tv_sub_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="Select Sub Category"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />

                    <ImageView
                            android:id="@+id/imv_sub_category"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/dropdown" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">

                <RelativeLayout
                        android:id="@+id/rl_product_type"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                    <TextView
                            android:id="@+id/tv_product_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical"
                            android:text="Select Product Type"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />

                    <ImageView
                            android:id="@+id/imv_gender"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/dropdown" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">


                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0.8dp">

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/et_il_price"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/TextInputLayoutStyle"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_ti_price"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Price"
                                android:inputType="numberDecimal"
                                android:maxLength="50"
                                android:textColor="@color/colorGrey"
                                android:textColorHint="@color/colorGrey"
                                android:textSize="14sp" />

                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="50"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0.8dp">

                    <RelativeLayout
                            android:id="@+id/rl_set_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical">

                        <TextView
                                android:id="@+id/tv_set_price"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="Set Price"
                                android:textColor="@color/colorGrey"
                                android:textColorHint="@color/colorGrey"
                                android:textSize="14sp" />

                        <ImageView
                                android:id="@+id/imv_price"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/dropdown" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                <Button
                        android:id="@+id/btn_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:background="@drawable/sellerbutton"
                        android:text="Upload Picture"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                <RelativeLayout
                        android:id="@+id/rl_take_picture"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="50"
                        android:paddingLeft="5dp">


                    <ImageView
                            android:id="@+id/imv_camera"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="21dp"
                            android:src="@drawable/camera" />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@+id/imv_camera"
                            android:gravity="center_vertical"
                            android:text="Take Picture"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />


                </RelativeLayout>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0.8dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/et_il_description"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_ti_discription"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="top"
                            android:gravity="top"
                            android:hint="Description"
                            android:scrollbars="vertical"
                            android:maxLines="3"
                            android:textColor="@color/colorGrey"
                            android:textColorHint="@color/colorGrey"
                            android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>


            <Button
                    android:id="@+id/btn_upload_item"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="50"
                    android:background="@drawable/sellerbutton"
                    android:text="Upload Item"
                    android:textAllCaps="false"
                    android:textStyle="bold" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>